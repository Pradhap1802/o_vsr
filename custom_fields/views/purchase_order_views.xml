<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_purchase_order_form_inherit_tally" model="ir.ui.view">
        <field name="name">purchase.order.form.inherit.tally</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="inside">
                <page string="Tally" name="tally">
                    <group>
                        <group>
                            <field name="x_studio_tally_order_no"/>
                        </group>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
