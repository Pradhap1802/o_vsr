<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_account_payment_form_inherit_tally" model="ir.ui.view">
        <field name="name">account.payment.form.inherit.tally</field>
        <field name="model">account.payment</field>
        <field name="inherit_id" ref="account.view_account_payment_form"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="inside">
                <page string="Tally" name="tally">
                    <group>
                        <group>
                            <field name="x_studio_tally_receipt_no"/>
                        </group>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
