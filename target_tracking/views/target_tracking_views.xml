<odoo>
    <!-- Target Tracking State Form View -->
    <record id="view_target_tracking_state_form" model="ir.ui.view">
        <field name="name">target.tracking.state.form</field>
        <field name="model">target.tracking.state</field>
        <field name="arch" type="xml">
            <form string="Target Tracking State">
                <sheet>
                    <group>
                        <field name="state_id"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Target Tracking State Kanban View -->
    <record id="view_target_tracking_state_kanban" model="ir.ui.view">
        <field name="name">target.tracking.state.kanban</field>
        <field name="model">target.tracking.state</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_dashboard" create="true" sample="0">
                <field name="state_id"/>
                <templates>
                    <t t-name="card">
                        <div class="oe_kanban_card">
                            <div class="oe_kanban_content">
                                <div class="o_kanban_record_top mb-3">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title fs-4"><field name="state_id"/></strong>
                                    </div>
                                </div>
                            </div>
                            <div class="oe_kanban_footer">
                                <button name="action_open_target_tracking" type="object" class="btn btn-primary btn-sm oe_kanban_action">View Records</button>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Target Tracking State Action -->
    <record id="action_target_tracking_state" model="ir.actions.act_window">
        <field name="name">Target Tracking</field>
        <field name="res_model">target.tracking.state</field>
        <field name="view_mode">kanban,form</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No states found
            </p>
            <p>
                Click "New" to add a state for target tracking.
            </p>
        </field>
    </record>

    <!-- Target Tracking Form View -->

    <record id="view_target_tracking_form" model="ir.ui.view">
        <field name="name">target.tracking.form</field>
        <field name="model">target.tracking</field>
        <field name="arch" type="xml">
            <form string="Target Tracking">
                <sheet>
                    <group>
                        <group string="Customer Information">
                            <field name="partner_id" domain="[('customer_rank', '>', 0)]" context="{'default_customer_rank': 1, 'search_default_customer': 1}"/>
                            <field name="state_id"/>
                            <field name="district"/>
                            <field name="taluka_name"/>
                            <field name="phone"/>
                        </group>
                        <group string="Target Period">
                            <field name="date_from"/>
                            <field name="date_to"/>
                        </group>
                    </group>
                    <group>
                        <group string="Target Details">
                            <field name="jan_target"/>
                            <field name="target_achieved" readonly="1"/>
                            <field name="pending_target" readonly="1"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Target Tracking List View -->
    <record id="view_target_tracking_list" model="ir.ui.view">
        <field name="name">target.tracking.list</field>
        <field name="model">target.tracking</field>
        <field name="arch" type="xml">
            <list editable="bottom" default_group_by="district">
                <field name="district" readonly="1" width="150px"/>
                <field name="taluka_name" readonly="1" width="200px"/>
                <field name="partner_id" options="{'no_create': True}" width="230px"/>
                <field name="phone" readonly="1" width="120px"/>
                <field name="date_from" width="120px"/>
                <field name="date_to" width="120px"/>
                <field name="jan_target" width="150px"/>
                <field name="target_achieved" readonly="1" width="150px"/>
                <field name="pending_target" readonly="1" width="150px"/>
                <button name="action_open_form" type="object" string="View" icon="fa-external-link"/>
            </list>
        </field>
    </record>

    <!-- Target Tracking Kanban View (State Selection) -->
    <record id="view_target_tracking_kanban_state" model="ir.ui.view">
        <field name="name">target.tracking.kanban.state</field>
        <field name="model">target.tracking</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_dashboard" create="true" sample="0" open="false">
                <field name="state_id"/>
                <templates>
                    <t t-name="card">
                        <div class="oe_kanban_card">
                            <div class="oe_kanban_content">
                                <div class="o_kanban_record_top mb-3">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title fs-4"><field name="state_id"/></strong>
                                    </div>
                                </div>
                            </div>
                            <div class="oe_kanban_footer">
                                <button name="action_open_state_list" type="object" class="btn btn-primary btn-sm oe_kanban_action">View Records</button>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Target Tracking Search View -->
    <record id="view_target_tracking_search" model="ir.ui.view">
        <field name="name">target.tracking.search</field>
        <field name="model">target.tracking</field>
        <field name="arch" type="xml">
            <search>
                <field name="taluka_name"/>
                <field name="partner_id"/>
                <field name="phone"/>
                <field name="district"/>
                <field name="state_id"/>
                <field name="date_from"/>
                <field name="date_to"/>
                
                <!-- Date Range Filters -->
                <filter string="Date From" name="filter_date_from" date="date_from"/>
                
                <separator/>
                <filter string="District" name="group_district" context="{'group_by': 'district'}"/>
                <filter string="State" name="group_state" context="{'group_by': 'state_id'}"/>
                
                <group expand="0" string="Group By">
                    <filter string="State" name="groupby_state" context="{'group_by': 'state_id'}"/>
                    <filter string="District" name="groupby_district" context="{'group_by': 'district'}"/>
                    <filter string="Date From" name="groupby_date_from" context="{'group_by': 'date_from'}"/>
                </group>
            </search>
        </field>
    </record>


    <!-- Target Tracking Action -->
    <record id="action_target_tracking" model="ir.actions.act_window">
        <field name="name">Target Tracking</field>
        <field name="res_model">target.tracking</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No target tracking records found
            </p>
            <p>
                Target tracking records are automatically created when you create customers in the system.
            </p>
        </field>
    </record>
</odoo>

