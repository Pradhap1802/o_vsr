<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Custom Paper Format for Production Memo (Landscape) -->
        <record id="paperformat_production_memo_landscape_pm" model="report.paperformat">
            <field name="name">Production Memo Landscape (PM)</field>
            <field name="default" eval="True"/>
            <field name="format">A4</field>
            <field name="page_height">0</field>
            <field name="page_width">0</field>
            <field name="orientation">Landscape</field>
            <field name="margin_top">5</field>
            <field name="margin_bottom">5</field>
            <field name="margin_left">5</field>
            <field name="margin_right">5</field>
            <field name="header_line" eval="False"/>
            <field name="header_spacing">0</field>
            <field name="dpi">90</field>
        </record>

        <!-- Report Action for Production Memo -->
        <record id="action_report_production_memo" model="ir.actions.report">
            <field name="name">Production Memo</field>
            <field name="model">mrp.production</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">vsr_packing_memo.report_production_memo_document</field>
            <field name="report_file">vsr_packing_memo.report_production_memo_document</field>
            <field name="print_report_name">'Production Memo - %s' % object.name</field>
            <field name="binding_model_id" ref="mrp.model_mrp_production"/>
            <field name="binding_type">report</field>
            <field name="paperformat_id" ref="paperformat_production_memo_landscape_pm"/>
        </record>

        <!-- Report Template for Production Memo -->
        <template id="report_production_memo_document">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <!-- Calculate Pages: chunk lots by 30 (3 tables of 10) -->
                    <t t-set="total_lots" t-value="o.no_of_lots if o.no_of_lots > 0 else 1"/>
                    <t t-set="page_starts" t-value="range(0, total_lots, 30)"/>

                    <t t-foreach="page_starts" t-as="page_start_val">
                        <div class="page" style="font-family: Calibri, Arial, sans-serif; font-size: 10px; page-break-after: always;">
                            
                            <!-- Header Section (Shared for the page) -->
                            <div style="margin-bottom: 5px;">
                                <table style="width: 100%; border: none;">
                                    <tr>
                                        <td style="width: 60%; vertical-align: top;">
                                            <table style="width: 100%; font-weight: bold;">
                                                <tr>
                                                    <td style="width: 100px; padding: 1px 0;">PRODUCT NAME</td>
                                                    <td style="padding: 1px 0;">: <span t-field="o.product_id.name"/></td>
                                                </tr>
                                                <tr>
                                                    <td style="padding: 1px 0;">TIME STARTED</td>
                                                    <td style="padding: 1px 0;">: ____________________</td>
                                                </tr>
                                                <tr>
                                                    <td style="padding: 1px 0;">TIME END</td>
                                                    <td style="padding: 1px 0;">: ____________________</td>
                                                </tr>
                                                <tr>
                                                    <td style="padding: 1px 0;">MEMO NO</td>
                                                    <td style="padding: 1px 0;">: <span t-field="o.memo_no"/></td>
                                                </tr>
                                                <tr>
                                                    <td style="padding: 1px 0;">DATE</td>
                                                    <td style="padding: 1px 0;">: <span t-esc="o.date_start.strftime('%d-%b-%y') if o.date_start else ''"/></td>
                                                </tr>
                                            </table>
                                        </td>
                                        <td style="width: 40%; vertical-align: top; text-align: right;">
                                            <div style="display: flex; flex-direction: column; align-items: flex-end;">
                                                <img t-if="o.company_id.logo" t-att-src="image_data_uri(o.company_id.logo)" style="max-height: 40px; margin-bottom: 2px;" alt="Company Logo"/>
                                                <div style="font-weight: bold; font-size: 12px;">V.S.R AGRO PRODUCTS</div>
                                            </div>
                                        </td>
                                    </tr>
                                </table>
                            </div>

                            <!-- Sensory Attributes (Only on First Page, Above Tables) -->
                            <t t-if="page_start_val == 0">
                                <div style="margin-bottom: 10px;">
                                    <h6 style="font-weight: bold; margin-bottom: 2px; font-size: 9px;">SENSORY ATTRIBUTES</h6>
                                    <table class="table table-bordered table-sm" style="width: 100%; font-size: 9px; border: 1px solid black;">
                                        <tr>
                                            <td style="width: 15%; font-weight: bold; padding: 1px;">Taste</td>
                                            <td style="width: 35%; padding: 1px;"><span t-field="o.taste"/></td>
                                            <td style="width: 15%; font-weight: bold; padding: 1px;">Texture</td>
                                            <td style="width: 35%; padding: 1px;"><span t-field="o.texture"/></td>
                                        </tr>
                                        <tr>
                                            <td style="font-weight: bold; padding: 1px;">Colour</td>
                                            <td style="padding: 1px;"><span t-field="o.color"/></td>
                                            <td style="font-weight: bold; padding: 1px;">Smell/Odour</td>
                                            <td style="padding: 1px;"><span t-field="o.smell"/></td>
                                        </tr>
                                        <tr>
                                            <td colspan="4" style="padding: 1px;">
                                                <strong>Overall Quality: </strong>
                                                <span t-field="o.overall_acceptability" style="text-transform: uppercase; font-weight: bold; margin-left: 10px;"/>
                                            </td>
                                        </tr>
                                    </table>
                                </div>
                            </t>

                            <!-- Loop for 3 Tables (0, 10, 20 offset) -->
                            <t t-foreach="[0, 10, 20]" t-as="table_offset">
                                <t t-set="current_table_start" t-value="page_start_val + table_offset"/>
                                
                                <!-- Only render table if lots exist in this range -->
                                <t t-if="current_table_start &lt; total_lots">
                                    <div style="margin-bottom: 10px;">
                                        <!-- Table Logic -->
                                        <style>
                                            .production-table {
                                                width: 100%;
                                                border-collapse: collapse;
                                                border: 1px solid black;
                                                font-size: 9px;
                                            }
                                            .production-table th, .production-table td {
                                                border: 1px solid black;
                                                padding: 2px;
                                                text-align: center;
                                            }
                                            .production-table th {
                                                background-color: #f2f2f2;
                                                font-weight: bold;
                                            }
                                            .bold-row {
                                                font-weight: bold;
                                            }
                                            .net-prod-row {
                                                background-color: #d8ead2; 
                                                font-weight: bold;
                                            }
                                        </style>

                                        <table class="production-table">
                                            <thead>
                                                <tr>
                                                    <th style="width: 30px;">Sl.No</th>
                                                    <th style="text-align: left;">Ingredients In Kg</th>
                                                    <!-- Dynamic Header for Lots (10 columns) -->
                                                    <t t-foreach="range(1, 11)" t-as="col_idx">
                                                        <t t-set="current_lot_num" t-value="current_table_start + col_idx"/>
                                                        <th>Lot <t t-esc="'%02d' % current_lot_num"/></th>
                                                    </t>
                                                    <th>Total</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <t t-set="row_counter" t-value="1"/>
                                                
                                                <!-- Determine active lots for this specific table (max 10) -->
                                                <t t-set="lots_in_table" t-value="total_lots - current_table_start"/>
                                                <t t-set="active_cols" t-value="10 if lots_in_table >= 10 else lots_in_table"/>
                                                
                                                <!-- Ingredients Rows -->
                                                <t t-foreach="o.move_raw_ids.filtered(lambda m: m.state != 'cancel')" t-as="move">
                                                    <tr>
                                                        <td><t t-esc="row_counter"/></td>
                                                        <td style="text-align: left;"><span t-field="move.product_id.name"/></td>
                                                        
                                                        <t t-set="line_grand_total" t-value="move.product_uom_qty"/>
                                                        <t t-set="qty_per_lot" t-value="line_grand_total / total_lots"/>
                                                        
                                                        <t t-foreach="range(1, 11)" t-as="col_idx">
                                                            <td>
                                                                <t t-if="col_idx &lt;= active_cols">
                                                                    <span t-esc="'%.2f' % qty_per_lot"/>
                                                                </t>
                                                                <t t-else="">0.00</t>
                                                            </td>
                                                        </t>
                                                        
                                                        <!-- Table Total (Sum of displayed lots) -->
                                                        <td class="bold-row">
                                                            <span t-esc="'%.2f' % (qty_per_lot * active_cols)"/>
                                                        </td>
                                                    </tr>
                                                    <t t-set="row_counter" t-value="row_counter + 1"/>
                                                </t>

                                                <!-- Total Ingredients Row -->
                                                <tr class="bold-row" style="background-color: #f2f2f2;">
                                                    <td colspan="2" style="text-align: right;">Total Ingredients</td>
                                                    <t t-set="grand_total_ingredients" t-value="sum(o.move_raw_ids.filtered(lambda m: m.state != 'cancel').mapped('product_uom_qty'))"/>
                                                    <t t-set="total_per_lot" t-value="grand_total_ingredients / total_lots"/>
                                                    
                                                    <t t-foreach="range(1, 11)" t-as="col_idx">
                                                        <td>
                                                            <t t-if="col_idx &lt;= active_cols">
                                                                <span t-esc="'%.2f' % total_per_lot"/>
                                                            </t>
                                                            <t t-else="">0.00</t>
                                                        </td>
                                                    </t>
                                                    <td><span t-esc="'%.2f' % (total_per_lot * active_cols)"/></td>
                                                </tr>

                                                <!-- Less: Wastage -->
                                                <t t-set="grand_total_wastage" t-value="sum(o.scrap_ids.filtered(lambda s: s.state == 'done').mapped('scrap_qty'))"/>
                                                <t t-set="wastage_per_lot" t-value="grand_total_wastage / total_lots"/>
                                                
                                                <tr>
                                                    <td colspan="2" style="text-align: right;">Less: Wastage</td>
                                                    <t t-foreach="range(1, 11)" t-as="col_idx">
                                                        <td>
                                                            <t t-if="col_idx &lt;= active_cols">
                                                                <span t-esc="'%.2f' % wastage_per_lot"/>
                                                            </t>
                                                            <t t-else="">0.00</t>
                                                        </td>
                                                    </t>
                                                    <td><span t-esc="'%.2f' % (wastage_per_lot * active_cols)"/></td>
                                                </tr>

                                                <!-- Net Production (Output) -->
                                                <t t-set="net_total_per_lot" t-value="total_per_lot - wastage_per_lot"/>
                                                <tr class="net-prod-row">
                                                    <td colspan="2" style="text-align: right;">Net Production (Output)</td>
                                                    <t t-foreach="range(1, 11)" t-as="col_idx">
                                                        <td>
                                                            <t t-if="col_idx &lt;= active_cols">
                                                                <span t-esc="'%.2f' % net_total_per_lot"/>
                                                            </t>
                                                            <t t-else="">0.00</t>
                                                        </td>
                                                    </t>
                                                    <td><span t-esc="'%.2f' % (net_total_per_lot * active_cols)"/></td>
                                                </tr>
                                            </tbody>
                                        </table>
                                    </div>
                                </t>
                            </t>

                            <!-- Footer (Shared at bottom) -->
                            <div style="break-inside: avoid;">

                                <!-- Signatories -->
                                <table style="width: 100%; border: none; font-size: 9px;">
                                    <tr>
                                        <td style="width: 33%; text-align: left;">
                                            <div style="border-top: 1px solid black; width: 80%; padding-top: 2px;">
                                                <strong>Prepared By</strong>
                                            </div>
                                        </td>
                                        <td style="width: 33%; text-align: center;">
                                            <div style="border-top: 1px solid black; width: 80%; margin: 0 auto; padding-top: 2px;">
                                                <strong>Checked By</strong>
                                            </div>
                                        </td>
                                        <td style="width: 33%; text-align: right;">
                                            <div style="border-top: 1px solid black; width: 80%; margin-left: auto; padding-top: 2px; text-align: left; padding-left: 5px;">
                                                <strong>Authorised Signatory</strong>
                                            </div>
                                        </td>
                                    </tr>
                                </table>
                            </div>

                        </div>
                    </t>
                </t>
            </t>
        </template>
    </data>
</odoo>
