<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_purchaseorder_document_inherit_vsr" inherit_id="purchase.report_purchaseorder_document">
        <xpath expr="//div[@id='total']" position="after">
            <!-- Authorized Signatory -->
            <div class="row mt-5" style="page-break-inside: avoid;">
                <div class="col-6 offset-6 text-end">
                    <div style="float: right; width: 200px; text-align: center; margin-top: 30px;">
                        <div style="height: 40px;"></div>
                        <div style="border-top: 1px solid black; padding-top: 5px;">
                            <strong>Authorized Signatory</strong>
                        </div>
                    </div>
                </div>
            </div>
        </xpath>
    </template>

    <template id="report_purchasequotation_document_inherit_vsr" inherit_id="purchase.report_purchasequotation_document">
         <!-- Add to Quotation as well if needed, but user said Purchase Order. Usually applied to both. -->
         <!-- For now, only PO. -->
         <xpath expr="//p[@t-field='o.notes']" position="after">
            <div class="row mt-5" style="page-break-inside: avoid;">
                <div class="col-6 offset-6 text-end">
                    <div style="float: right; width: 200px; text-align: center; margin-top: 30px;">
                        <div style="height: 40px;"></div>
                        <div style="border-top: 1px solid black; padding-top: 5px;">
                            <strong>Authorized Signatory</strong>
                        </div>
                    </div>
                </div>
            </div>
         </xpath>
    </template>
</odoo>
