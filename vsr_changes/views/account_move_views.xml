<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Add vehicle and delivery fields to invoice form -->
    <record id="view_move_form_vsr" model="ir.ui.view">
        <field name="name">account.move.form.vsr</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='invoice_date']" position="after">
                <field name="vsr_vehicle_number"/>
                <field name="delivery_number"/>
                <field name="destination"/>
            </xpath>
            <xpath expr="//field[@name='invoice_line_ids']//field[@name='price_unit']" position="before">
                <field name="pieces_per_case"/>
                <field name="price_per_piece"/>
            </xpath>
        </field>
    </record>
</odoo>
