<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Report Action -->
        <record id="action_report_sanitization_checklist" model="ir.actions.report">
            <field name="name">Sanitization Checklist</field>
            <field name="model">sanitization.checklist</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">vsr_changes.report_sanitization_checklist_document</field>
            <field name="report_file">vsr_changes.report_sanitization_checklist_document</field>
            <field name="print_report_name">'Sanitization Report - %s' % object.date</field>
            <field name="binding_model_id" ref="model_sanitization_checklist"/>
            <field name="binding_type">report</field>
        </record>

        <!-- Report Template -->
        <template id="report_sanitization_checklist_document">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-call="web.external_layout">
                        <div class="page" style="font-family: Arial, sans-serif;">
                            
                            <!-- Title -->
                            <div class="text-center mb-4">
                                <h3 style="font-weight: bold; margin-bottom: 5px;">DAILY SANITIZATION &amp; CLEANLINESS CHECKLIST</h3>
                                <h5 style="margin-top: 0;">Pickle Food Manufacturing Plant</h5>
                            </div>

                            <!-- Header Info -->
                            <table class="table table-bordered table-sm" style="border-color: black;">
                                <tr>
                                    <td style="width: 15%;"><strong>Date:</strong></td>
                                    <td style="width: 35%;"><span t-field="o.date"/></td>
                                    <td style="width: 15%;"><strong>Shift:</strong></td>
                                    <td style="width: 35%;"><span t-field="o.shift"/></td>
                                </tr>
                                <tr>
                                    <td><strong>Area:</strong></td>
                                    <td><span t-field="o.area"/></td>
                                    <td><strong>Checked By:</strong></td>
                                    <td><span t-field="o.checked_by"/></td>
                                </tr>
                            </table>

                            <!-- Checklist Table -->
                            <table class="table table-bordered table-sm mt-3" style="border-color: black; font-size: 11px;">
                                <thead>
                                    <tr style="background-color: #f0f0f0;">
                                        <th style="width: 5%; text-align: center; vertical-align: middle;">S.No</th>
                                        <th style="width: 25%; vertical-align: middle;">Area / Equipment</th>
                                        <th style="width: 30%; vertical-align: middle;">Sanitization Requirement</th>
                                        <th style="width: 10%; text-align: center; vertical-align: middle;">Status (OK / Not OK)</th>
                                        <th style="width: 15%; vertical-align: middle;">Corrective Action</th>
                                        <th style="width: 15%; vertical-align: middle;">Remarks</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <t t-foreach="o.line_ids" t-as="line">
                                        <tr>
                                            <td style="text-align: center;"><span t-field="line.sequence"/></td>
                                            <td><span t-field="line.area_equipment"/></td>
                                            <td><span t-field="line.sanitization_requirement"/></td>
                                            <td style="text-align: center;">
                                                <t t-if="line.status == 'ok'">
                                                    <span class="badge rounded-pill text-bg-success">OK</span>
                                                </t>
                                                <t t-elif="line.status == 'not_ok'">
                                                    <span class="badge rounded-pill text-bg-danger">Not OK</span>
                                                </t>
                                            </td>
                                            <td><span t-field="line.corrective_action"/></td>
                                            <td><span t-field="line.remarks"/></td>
                                        </tr>
                                    </t>
                                </tbody>
                            </table>

                            <!-- Footer Section -->
                            <div class="row mt-4">
                                <div class="col-12">
                                    <div style="border: 1px solid black; padding: 10px;">
                                        <strong>Overall Status:</strong>
                                        <span class="ms-3">
                                            <i class="fa fa-check-square-o" t-if="o.overall_status == 'satisfactory'"/>
                                            <i class="fa fa-square-o" t-if="o.overall_status != 'satisfactory'"/> Satisfactory
                                        </span>
                                        <span class="ms-3">
                                            <i class="fa fa-check-square-o" t-if="o.overall_status == 'not_satisfactory'"/>
                                            <i class="fa fa-square-o" t-if="o.overall_status != 'not_satisfactory'"/> Not Satisfactory
                                        </span>
                                    </div>
                                </div>
                            </div>

                            <div class="row mt-5">
                                <div class="col-6">
                                    <strong>Approved By:</strong> <span t-field="o.approved_by"/>
                                </div>
                                <div class="col-6 text-end">
                                    <div class="d-inline-block text-center" style="width: 200px;">
                                        <div style="border-bottom: 1px solid black; height: 30px;">
                                            <span t-field="o.supervisor_signature"/>
                                        </div>
                                        <strong style="display: block; margin-top: 5px;">Supervisor Signature</strong>
                                        <span t-field="o.supervisor_date"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </t>
            </t>
        </template>
    </data>
</odoo>
