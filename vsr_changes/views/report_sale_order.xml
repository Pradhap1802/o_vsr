<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_saleorder_document_inherit" inherit_id="sale.report_saleorder_document">
        <xpath expr="//th[@name='th_quantity']" position="after">
            <th name="th_pieces" class="text-end">Pieces</th>
            <th name="th_price_piece" class="text-end">Price/Piece</th>
        </xpath>
        <xpath expr="//td[@name='td_quantity']" position="after">
            <td name="td_pieces" class="text-end">
                <span t-field="line.pieces_per_case"/>
            </td>
            <td name="td_price_piece" class="text-end">
                <span t-field="line.price_per_piece"/>
            </td>
        </xpath>
    </template>
</odoo>
