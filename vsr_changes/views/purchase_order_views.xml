<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Add domain filter to Purchase Order partner field -->
    <record id="view_purchase_order_form_partner_domain" model="ir.ui.view">
        <field name="name">purchase.order.form.partner.domain</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
            <!-- Add domain to partner_id field to show only vendors -->
            <xpath expr="//field[@name='partner_id']" position="attributes">
                <attribute name="domain">[('partner_type', '=', 'vendor')]</attribute>
            </xpath>
        </field>
    </record>
</odoo>
