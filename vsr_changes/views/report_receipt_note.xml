<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="action_report_receipt_note" model="ir.actions.report">
        <field name="name">Receipt Note</field>
        <field name="model">stock.picking</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">vsr_changes.report_receipt_note</field>
        <field name="report_file">vsr_changes.report_receipt_note</field>
        <field name="print_report_name">'Receipt Note - %s' % (object.name)</field>
        <field name="binding_model_id" ref="stock.model_stock_picking"/>
        <field name="binding_type">report</field>
    </record>

    <template id="report_receipt_note">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="web.external_layout">
                    <div class="page" style="font-size: 18px;">
                        <h2>Receipt Note: <span t-field="o.name"/></h2>
                        
                        <!-- Header Information: One by one (Stacked Block) -->
                        <div class="mt32 mb32">
                            <div class="mb-2">
                                <strong>Vendor:</strong> <span t-field="o.partner_id.name"/>
                            </div>
                            <div class="mb-2" style="margin-left: 20px;">
                                <div t-if="o.partner_id.street">
                                    <span t-field="o.partner_id.street"/>
                                </div>
                                <div t-if="o.partner_id.street2">
                                    <span t-field="o.partner_id.street2"/>
                                </div>
                                <div>
                                    <span t-if="o.partner_id.city" t-field="o.partner_id.city"/><t t-if="o.partner_id.city and o.partner_id.state_id">, </t>
                                    <span t-if="o.partner_id.state_id" t-field="o.partner_id.state_id.name"/>
                                    <span t-if="o.partner_id.zip"> - <t t-esc="o.partner_id.zip"/></span>
                                </div>
                                <div t-if="o.partner_id.country_id">
                                    <span t-field="o.partner_id.country_id.name"/>
                                </div>
                            </div>
                            <div class="mb-2">
                                <strong>Date:</strong> <span t-field="o.scheduled_date"/>
                            </div>
                            <div class="mb-2">
                                <strong>Source:</strong> <span t-field="o.origin"/>
                            </div>
                        </div>
                        
                        <table class="table table-sm o_main_table">
                            <thead>
                                <tr>
                                    <th>Product</th>
                                    <th class="text-end">Quantity</th>
                                    <th class="text-end">Rate</th>
                                    <th>Taxes</th>
                                    <th class="text-end">Total</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr t-foreach="o.move_ids" t-as="move">
                                    <td><span t-field="move.product_id"/></td>
                                    <td class="text-end"><span t-field="move.product_uom_qty"/> <span t-field="move.product_uom"/></td>
                                    <td class="text-end"><span t-field="move.rate"/></td>
                                    <td><span t-field="move.vsr_tax_ids" widget="many2many_tags"/></td>
                                    <td class="text-end"><span t-field="move.total"/></td>
                                </tr>
                            </tbody>
                        </table>
                        
                        <!-- Tax Breakdown Section -->
                        <div class="clearfix">
                            <div class="row">
                                <div class="col-6">
                                </div>
                                <div class="col-5 offset-1">
                                    <table class="table table-sm">
                                        <!-- Untaxed Amount -->
                                        <tr>
                                            <td><strong>Untaxed Amount:</strong></td>
                                            <td class="text-end">
                                                <span t-esc="sum(move.subtotal for move in o.move_ids)" t-options='{"widget": "monetary", "display_currency": o.company_id.currency_id}'/>
                                            </td>
                                        </tr>
                                        
                                        <!-- Individual Tax Breakdown -->
                                        <t t-set="tax_details" t-value="{}"/>
                                        <t t-foreach="o.move_ids" t-as="move">
                                            <t t-if="move.vsr_tax_ids and move.subtotal">
                                                <t t-set="tax_results" t-value="move.vsr_tax_ids.compute_all(move.rate, currency=o.company_id.currency_id, quantity=move.product_uom_qty, product=move.product_id, partner=o.partner_id)"/>
                                                <t t-foreach="tax_results['taxes']" t-as="tax">
                                                    <t t-set="tax_name" t-value="tax['name']"/>
                                                    <t t-set="tax_amount" t-value="tax['amount']"/>
                                                    <t t-if="tax_name in tax_details">
                                                        <t t-set="tax_details" t-value="dict(tax_details, **{tax_name: tax_details[tax_name] + tax_amount})"/>
                                                    </t>
                                                    <t t-else="">
                                                        <t t-set="tax_details" t-value="dict(tax_details, **{tax_name: tax_amount})"/>
                                                    </t>
                                                </t>
                                            </t>
                                        </t>
                                        
                                        <!-- Display Individual Taxes -->
                                        <t t-foreach="tax_details.items()" t-as="tax_item">
                                            <tr>
                                                <td><span t-esc="tax_item[0]"/>:</td>
                                                <td class="text-end">
                                                    <span t-esc="tax_item[1]" t-options='{"widget": "monetary", "display_currency": o.company_id.currency_id}'/>
                                                </td>
                                            </tr>
                                        </t>
                                        
                                        <!-- Grand Total -->
                                        <tr class="border-black o_total">
                                            <td><strong>Grand Total:</strong></td>
                                            <td class="text-end">
                                                <strong>
                                                    <span t-esc="sum(move.total for move in o.move_ids)" t-options='{"widget": "monetary", "display_currency": o.company_id.currency_id}'/>
                                                </strong>
                                            </td>
                                        </tr>
                                    </table>
                                </div>
                            </div>
                        </div>
                        
                        <!-- Authorized Signatory -->
                        <!-- Authorized Signatory -->
                        <div class="row mt-5" style="page-break-inside: avoid;">
                            <div class="col-6 offset-6 text-end">
                                <div style="float: right; width: 200px; text-align: center; margin-top: 30px;">
                                    <div style="height: 40px;"></div>
                                    <div style="border-top: 1px solid black; padding-top: 5px;">
                                        <strong>Authorized Signatory</strong>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>
