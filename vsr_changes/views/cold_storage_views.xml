<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Cold Storage Tree View -->
    <record id="view_cold_storage_tree" model="ir.ui.view">
        <field name="name">cold.storage.tree</field>
        <field name="model">cold.storage</field>
        <field name="arch" type="xml">
            <list>
                <field name="date"/>
                <field name="total_rent_amount"/>
                <field name="total_paid_amount"/>
                <field name="balance_amount"/>
            </list>
        </field>
    </record>

    <!-- Cold Storage Form View -->
    <record id="view_cold_storage_form" model="ir.ui.view">
        <field name="name">cold.storage.form</field>
        <field name="model">cold.storage</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="display_name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="date"/>
                        </group>
                    </group>

                    <!-- Stock Rent Table -->
                    <separator string="VSR Stock Rent"/>
                    <field name="stock_line_ids">
                        <list editable="bottom">
                            <field name="date"/>
                            <field name="card_no"/>
                            <field name="product_id"/>
                            <field name="bags" sum="Total Bags"/>
                            <field name="weight" sum="Total Weight"/>
                            <field name="price_per_kg"/>
                            <field name="month_multiplier"/>
                            <field name="yearly_amount"/>
                            <field name="amount" sum="Total Amount"/>
                        </list>
                    </field>
                    
                    <group class="oe_subtotal_footer oe_right">
                        <field name="total_rent_amount"/>
                    </group>

                    <!-- Payment Release Table -->
                    <separator string="Payment Release Of Bank Account"/>
                    <field name="payment_line_ids">
                        <list editable="bottom">
                            <field name="date"/>
                            <field name="bank_name"/>
                            <field name="amount_paid" sum="Total Paid"/>
                        </list>
                    </field>
                    
                    <group class="oe_subtotal_footer oe_right">
                        <field name="total_paid_amount"/>
                        <field name="balance_amount" class="oe_subtotal_footer_separator"/>
                    </group>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_cold_storage" model="ir.actions.act_window">
        <field name="name">Cold Storage</field>
        <field name="res_model">cold.storage</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
          <p class="o_view_nocontent_smiling_face">
            Create a newly Cold Storage Statement
          </p>
        </field>
    </record>

    <!-- Menu -->
    <menuitem id="menu_cold_storage_root" name="Cold Storage" parent="purchase.menu_purchase_root" sequence="20"/>
    <menuitem id="menu_cold_storage_statement" name="Cold Storage Statement" parent="menu_cold_storage_root" action="action_cold_storage" sequence="1"/>

</odoo>
