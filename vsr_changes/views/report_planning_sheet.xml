<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Report Definition -->
    <record id="action_report_planning_sheet" model="ir.actions.report">
        <field name="name">Daily Packing &amp; Dispatch Report</field>
        <field name="model">planning.sheet</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">vsr_changes.report_planning_sheet_document</field>
        <field name="report_file">vsr_changes.report_planning_sheet_document</field>
        <field name="binding_model_id" ref="model_planning_sheet"/>
        <field name="binding_type">report</field>
        <field name="print_report_name">'Planning Sheet - %s' % (object.name)</field>
        <field name="paperformat_id" ref="base.paperformat_euro"/>
    </record>

    <!-- Report Template -->
    <template id="report_planning_sheet_document">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="web.external_layout">
                    <div class="page">
                        <style>
                            .planning-header {
                                text-align: center;
                                margin-bottom: 20px;
                            }
                            .planning-header h2 {
                                margin: 5px 0;
                                font-size: 18px;
                                font-weight: bold;
                            }
                            .planning-header p {
                                margin: 2px 0;
                                font-size: 11px;
                            }
                            .planning-table {
                                width: 100%;
                                border-collapse: collapse;
                                margin-top: 10px;
                                font-size: 9px;
                            }
                            .planning-table th,
                            .planning-table td {
                                border: 1px solid #000;
                                padding: 3px;
                                text-align: center;
                            }
                            .planning-table th {
                                background-color: #90EE90;
                                font-weight: bold;
                            }
                            .planning-table .product-col {
                                background-color: #FFFF00;
                                font-weight: bold;
                                text-align: left;
                                padding-left: 8px;
                            }
                            .planning-table .stock-col {
                                background-color: #90EE90;
                            }
                            .planning-table .total-col {
                                background-color: #90EE90;
                                font-weight: bold;
                            }
                            .date-box {
                                float: right;
                                border: 1px solid #000;
                                padding: 5px 10px;
                                margin-top: -30px;
                            }
                        </style>

                        <!-- Header -->
                        <div class="planning-header">
                            <h2>DAILY PACKING &amp; DISPATCH REPORT</h2>
                            <h2>V.S.R. AGRO PRODUCTS</h2>
                            <p>73/1C2, 74/2, BRG MADEPALLI, BARUGUR - 635104,</p>
                            <p>DIST.KRISHNAGIRI, TAMIL NADU - INDIA , GSTIN: 33AALFV8718M1ZH</p>
                            <p>PH.NO: +91 99429 54446/96559 54446</p>
                            <p>Mail: vsragroproducts@gmail.com, Web: www.vsragroproducts.com</p>
                        </div>

                        <!-- Date Box -->
                        <div class="date-box">
                            <strong><t t-esc="o.date.strftime('%d.%m.%Y')"/></strong>
                        </div>

                        <div style="clear: both;"></div>

                        <!-- Get all unique cities and products -->
                        <t t-set="all_cities" t-value="sorted(set(o.line_ids.mapped('city')))"/>
                        <t t-set="all_products" t-value="o.line_ids.mapped('product_id').sorted(lambda p: p.name)"/>

                        <!-- Planning Table -->
                        <table class="planning-table">
                            <thead>
                                <tr>
                                    <th style="width: 20%;">PRODUCT</th>
                                    <th style="width: 10%;">STOCKS<br/>IN KGS</th>
                                    
                                    <!-- City columns -->
                                    <t t-foreach="all_cities" t-as="city">
                                        <th><t t-esc="city"/></th>
                                    </t>
                                    
                                    <th>TOTAL QTY<br/>IN CASE</th>
                                    <th>REQ QTY IN<br/>KGS</th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-foreach="all_products" t-as="product">
                                    <t t-set="product_lines" t-value="o.line_ids.filtered(lambda l: l.product_id == product)"/>
                                    <t t-set="stock_qty" t-value="product_lines[0].stocks_in_kgs if product_lines else 0"/>
                                    <tr>
                                        <td class="product-col">
                                            <t t-esc="product.name"/>
                                        </td>
                                        <td class="stock-col">
                                            <t t-esc="'%.0f' % stock_qty if stock_qty else ''"/>
                                        </td>
                                        
                                        <!-- City quantities -->
                                        <t t-foreach="all_cities" t-as="city">
                                            <t t-set="city_line" t-value="product_lines.filtered(lambda l: l.city == city)"/>
                                            <td>
                                                <t t-if="city_line and city_line.quantity">
                                                    <t t-esc="'%.0f' % city_line.quantity"/>
                                                </t>
                                            </td>
                                        </t>
                                        
                                        <!-- Totals -->
                                        <t t-set="total_qty" t-value="sum(product_lines.mapped('quantity'))"/>
                                        <t t-set="total_req" t-value="sum(product_lines.mapped('req_qty_in_kgs'))"/>
                                        <td class="total-col"><t t-esc="'%.0f' % total_qty if total_qty else ''"/></td>
                                        <td class="total-col"><t t-esc="'%.0f' % total_req if total_req else ''"/></td>
                                    </tr>
                                </t>
                            </tbody>
                        </table>

                        <t t-if="o.notes">
                            <div style="margin-top: 20px;">
                                <strong>Notes:</strong>
                                <p t-field="o.notes"/>
                            </div>
                        </t>
                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>
