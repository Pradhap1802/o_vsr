<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_planning_sheet_wizard_form" model="ir.ui.view">
        <field name="name">planning.sheet.wizard.form</field>
        <field name="model">planning.sheet.wizard</field>
        <field name="arch" type="xml">
            <form string="Planning Sheet Report">
                <group>
                    <field name="date"/>
                </group>
                <footer>
                    <button name="action_print_report" string="Print Report" type="object" class="btn-primary" icon="fa-print"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_planning_sheet_wizard" model="ir.actions.act_window">
        <field name="name">Planning Sheet</field>
        <field name="res_model">planning.sheet.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <!-- Add to Reporting Menu -->
    <menuitem id="menu_planning_sheet_report"
              name="Planning Sheet"
              parent="sale.menu_sale_report"
              action="action_planning_sheet_wizard"
              sequence="20"/>
</odoo>
